<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml"/>
    <package name="tutorial" extends="struts-default">
        <action name="HelloWorld" class="tutorial.HelloWorld">
            <result>HelloWorld.jsp</result>
        </action>
        
        <action name="ShowBooks" class="tutorial.AuthorSearch">
            <result name="success">ShowBooks.jsp</result>
            <result name="failure">InputError.jsp</result>
            <result name="exception">Exception.jsp</result>
        </action>
        
        <action name="CheckInfo" class="tutorial.Book">
            <result>BookInformation.jsp</result>
        </action>
        
        <action name="Delete" class="tutorial.DeleteBook">
            <result name="success">Search.jsp</result>
            <result name="failure">Failure.jsp</result>
            <result name="exception">Exception.jsp</result>
        </action>
        
        <action name="AddBook" class="tutorial.AddBook">
            <result name="success">Search.jsp</result>
            <result name="abscence">Search.jsp</result>
            <result name="failure">Failure.jsp</result>
            <result name="inputerror">InputError.jsp</result>
            <result name="exception">Exception.jsp</result>
        </action>
        
        <action name="AddAuthor" class="tutorial.">
            <result name="success">Search.jsp</result>
            <result name="failure">Failure.jsp</result>
            <result name="inputerror">InputError.jsp</result>
            <result name="exception">Exception.jsp</result>
        </action>
        
    </package>
</struts>